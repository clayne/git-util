[color]
  diff = auto
  status = auto
  branch = auto
[core]
  excludesfile = ~/.gitignore
  editor = emacs -nw
  pager = less -+$LESS -FRX
  whitespace = tab-in-indent
[alias]
  branches = for-each-ref --format='%(refname:short)'
  cached = diff --cached
  co = checkout
  cp = cherry-pick
  detach = checkout --detach
  df = dirtyfiles
  ff = merge --ff-only --no-stat
  ffm = ff-branch -v master
  figg = diff
  fx = commit --amend --no-edit
  git = !git
  graph = log --decorate --graph --oneline
  grpe = grep
  hist = log --decorate --graph --oneline --all --cherry-mark
  ix = diff --cached
  log1 = log --oneline --decorate
  logf = log --format=fuller
  mine = log --author=mjd
  myfiles = what-changed --author=mjd --all
  patch = apply
  pullr = pull --rebase
  qc = quick-commit
  rl = rev-list
  rp = rev-parse
  revlist = rev-list
  revparse = rev-parse
  rprune = remote prune
  s = status -s
  set-upstream = !git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`
  st = status
  stat = show --stat
  statuis = status
  type = cat-file -t
  wc = what-changed
  # wip = commit -a --no-verify -m "WIP $(hostname --short)"
[pager]
  show-branch = yes
[rebase]
  autosquash = true
