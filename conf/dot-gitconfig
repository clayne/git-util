[color]
  diff = auto
  status = auto
  branch = auto
[core]
  excludesfile = /home/mjd/.gitignore
  editor = emacs -nw
  pager = less -+$LESS -FRX
[alias]
  branches = for-each-ref --format='%(refname:short)'
  cached = diff --cached
  co = checkout
  cp = cherry-pick
  detach = checkout --detach
  df = dirtyfiles
  ff = merge --ff-only
  ffm = ff-branch -v master
  figg = diff
  fixup = commit --amend -C HEAD
  hist = log --all --decorate --graph --oneline
  ix = diff --cached
  mine = log --author=mjd
  myfiles = what-changed --author=mjd --all
  patch = apply
  pullr = pull --rebase
  rprune = remote prune
  s = status -s
  st = status
  statuis = status
  type = cat-file -t
  wc = what-changed
  wip = commit -a -m WIP
[pager]
  show-branch = yes
[rebase]
  autosquash = true
[svn]
  addAuthorFrom = true
  useLogAuthor = true
